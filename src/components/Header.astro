<header class="bg-white shadow-md fixed w-full top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-lg sm:text-2xl font-bold text-primary"
            >Friends of Humanity</a
          >
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-secondary hover:text-primary hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Desktop menu -->
      <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-8">
        <a href="#programs" class="text-secondary hover:text-primary"
          >Programs</a
        >
        <a href="#contact" class="text-secondary hover:text-primary">Contact</a>
        <a
          href="#contact"
          class="bg-primary text-white px-4 py-2 rounded-md hover:bg-blue-600 transition-colors duration-300"
          >Get Involved</a
        >
      </div>
    </div>

    <!-- Mobile menu panel -->
    <div class="sm:hidden hidden" id="mobile-menu">
      <div class="pt-2 pb-3 space-y-1">
        <a
          href="#programs"
          class="block px-3 py-2 text-base font-medium text-secondary hover:text-primary hover:bg-gray-50 rounded-md"
          >Programs</a
        >
        <a
          href="#contact"
          class="block px-3 py-2 text-base font-medium text-secondary hover:text-primary hover:bg-gray-50 rounded-md"
          >Contact</a
        >
        <a
          href="#contact"
          class="block px-3 py-2 text-base font-medium bg-primary text-white rounded-md hover:bg-blue-600 transition-colors duration-300"
          >Get Involved</a
        >
      </div>
    </div>
  </nav>
</header>

<!-- Add padding to account for fixed header -->
<div class="h-16"></div>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");

    // Update aria-expanded
    const isExpanded = mobileMenu?.classList.contains("hidden") === false;
    mobileMenuButton.setAttribute("aria-expanded", isExpanded.toString());
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      mobileMenuButton?.setAttribute("aria-expanded", "false");
    });
  });

  // Smooth scroll for all anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e: Event) {
      e.preventDefault();
      const targetId = (e.currentTarget as HTMLAnchorElement).getAttribute("href");
      if (targetId) {
        document.querySelector(targetId)?.scrollIntoView({
          behavior: "smooth",
        });
      }
    });
  });
</script>
